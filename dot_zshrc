# Path to your Oh My Zsh installation.
export ZSH="$HOME/.oh-my-zsh"

# Theme
ZSH_THEME="robbyrussell"

# Plugins
plugins=(git)

# Variables de entorno
export PATH="/opt/homebrew/bin:$PATH"
export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"
export JAVA_HOME=$(/usr/libexec/java_home -v 17)
export API_KEY="sk-proj-..."

# Inicialización de herramientas
eval "$(pyenv init --path)"
eval "$(pyenv init -)"
eval "$(zoxide init zsh)"
eval "$(~/.local/bin/mise activate)"

# Docker CLI completions
fpath=(/Users/joseluis/.docker/completions $fpath)
fpath+=("/opt/homebrew/share/zsh/site-functions")
autoload -Uz compinit
compinit

# iterm2 integration
test -e "${HOME}/.iterm2_shell_integration.zsh" && source "${HOME}/.iterm2_shell_integration.zsh"

# Funciones personalizadas
function iterm2_print_user_vars() {
  iterm2_set_user_var deployment "$DEPLOYMENT"
  iterm2_set_user_var project "$PROJECT"
  local avail_gb
  avail_gb=$( df -k / | awk 'NR==2 { printf "%.2f GB\n", $4/1024/1024 }' )
  iterm2_set_user_var diskAvail "$avail_gb"
}

# ============================================
# iTerm2 Tab Color Automation (YAML-based)
# ============================================
# Configuración en: ~/.config/iterm2-colors/config.yml

# Cargar el gestor de colores
if [[ -f "${HOME}/.config/iterm2-colors/iterm2-color-manager.sh" ]]; then
    source "${HOME}/.config/iterm2-colors/iterm2-color-manager.sh"

    # Hook que se ejecuta al cambiar de directorio
    chpwd() {
        apply_color_for_directory
    }

    # Aplicar color inicial al abrir nueva terminal
    apply_color_for_directory
fi

# ============================================
# Shell Functions - App Management
# ============================================
# Location: ~/.config/shell-functions/

# Source shell functions if available
if [[ -d "${HOME}/.config/shell-functions" ]]; then
    # Crear aliases para los scripts
    alias fa="${HOME}/.config/shell-functions/focus-app.sh"
    alias ka="${HOME}/.config/shell-functions/kill-app.sh"
    alias fqa="${HOME}/.config/shell-functions/force-quit-app.sh"
fi

# Oh My Zsh
source $ZSH/oh-my-zsh.sh

# ALIAS (todos agrupados aquí al final)
alias lg="lazygit"
alias ubuntu-dev='docker run -it --name ubuntu-dev -v /Users/joseluis/Library/CloudStorage/Dropbox/Dropbox-Dev:/mnt/dropbox-dev ubuntu-dev:latest'
alias gcm="/Users/joseluis/Library/CloudStorage/Dropbox/DB-Freelance/SCRIPTS/BASH/generate_commit_message.sh"
alias git-switch='/Users/joseluis/Dropbox/Scripts/Bash/git-switch.sh'

# Neovim configuration switcher
alias nvim-lazy='NVIM_APPNAME=nvim-lazyvim nvim'
alias nvim-custom='nvim'  # Tu configuración personalizada (default)

# Tmux development sessions (Neovim + Claude Code)
alias dev='dev-session'        # LazyVim arriba + Claude Code abajo
alias dev-nvim='dev-nvim'      # Tu Neovim personalizado + Claude Code

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

export PATH="$PATH:$(go env GOPATH)/bin"

